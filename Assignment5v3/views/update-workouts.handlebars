

<head>
  <link rel="stylesheet" href="styles/homestylesheet.css" type="text/css">
  {{#each jsscripts}}
  <script src="{{this}}"></script>
  {{/each}}


<script>
function updateWorkouts(id) {
	$.ajax({
		url: '/'+ id,
		type: 'PUT',
		data: $('#update-workouts').serialize(),
		success: function(result){
			window.location.replace("./");
			//window.location.href="/";
		}
	})
};

function dateConverter(date) {
	covert(varchar(10), date, 101);
}



</script>




</head>


<body>

<div class = "container">




<form id="update-workouts" action="/" method="post">
	<legend>Update a workout</legend>
	<form id="update-workouts" action="/" method="post">
		ID CHECK <input type="text" name="id" value = "{{workouts.id}}"><br>
		Exercise Name: <input type="text" name="name" value="{{workouts.name}}"><br>
		Repetitions: <input type="number" name="reps" value="{{workouts.reps}}"><br>
		Weight: <input type ="number" name="weight" value="{{workouts.weight}}"><br>
		Date: <input type="date" name="date" value={{workouts.date}}><br>
		Weight is in Pounds? <select type="number" name="lbs" id="weight-selector"><br>
		<option value="1">Pounds (lbs)</option>
		<option value="0">Kilograms (kg)</option>
		<br>
	</select>
	<br/>
	</form>
	<button onclick="updateWorkouts({{workouts.id}})">Update</button>

</div>
</body>




